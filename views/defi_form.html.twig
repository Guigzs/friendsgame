{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}Edition{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
	{{ flashMessage }}
</div>
{% endfor %}

<div class="well">
	{{ form_start(defiForm, { 'attr': {'class': 'form-horizontal'} }) }}
	<div class="form-group">
		{{ form_label(defiForm.contenu, null, { 'label_attr':  {
		'class': 'col-sm-4 control-label'
		}}) }}
		<div class="col-sm-6">
			{{ form_errors(defiForm.contenu) }}
			{{ form_widget(defiForm.contenu, { 'attr':  {
			'class': 'form-control',
			'rows': '8'
			}}) }}
		</div>
	</div>
	<div class="form-group">
		{{ form_label(defiForm.niveau, null, { 'label_attr':  {
		'class': 'col-sm-5 control-label'
		}}) }}
		<div class="col-sm-2">
			{{ form_errors(defiForm.niveau) }}
			{{ form_widget(defiForm.niveau, { 'attr':  {
			'class': 'form-control'
			}}) }}
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-5 control-label">Cat√©gorie</label>
		<div class="col-sm-2">
			<select class="form-control" name="categorie">
				{% for categorie in categories %}
					<option value="{{ categorie.id }}">{{ categorie.nom }}</option>
				{% endfor %}
			</select>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-4 col-sm-3">
			<input type="submit" class="btn btn-primary" value="Save" />
		</div>
	</div>
	{{ form_end(defiForm) }}
</div>
{% endblock %}